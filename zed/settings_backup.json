
{
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    },
    "model_parameters": []
  },
  "tabs": {
    "show_diagnostics": "errors"
  },
  "minimap": {
    "max_width_columns": 70,
    "show": "always"
  },
  "diagnostics": {
    
    "inline": {
      "enabled": true,
      "max_severity": null // Set to "error", "warning", "info", or "hint" to filter severity, or null for all.
    }
  },
  
  
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "icon_theme": {
    "mode": "system",
    "light": "VSCode Icons for Zed (Dark)",
    "dark": "VSCode Icons for Zed (Dark)"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "theme": {
    "mode": "dark",
    "light": "Syntax",
    "dark": "Syntax"
  },
  "telemetry": {
    "diagnostics": false
  },
  "tab_bar": {
    "show": true
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 15.0,
  "buffer_font_size": 15.0,

  "scrollbar": {
    "show": "always",
    "cursors": false,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "jupyter": {
    "kernel_selections": {
      "python": "conda-env",
      "typescript": "node",
      "javascript": "node",
      "r": "ark"
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pylsp", "ruff"],
      "format_on_save": "on"
    },
    "typescript": {
      "language_servers": ["tsserver", "prettier", "!eslint"],
      "format_on_save": "on"
    },
    "typescriptreact": {
      "language_servers": ["tsserver", "prettier", "!eslint"],
      "format_on_save": "on"
    },
    "javascriptreact": {
      "language_servers": ["tsserver", "prettier", "!eslint"],
      "format_on_save": "on"
    },
    "javascript": {
      "language_servers": ["tsserver", "prettier", "!eslint"],
      "format_on_save": "on"
    },
    "html": {
      "language_servers": ["tsserver", "prettier", "!eslint"],
      "format_on_save": "on"
    }
  },
  "lsp": {
    "pylsp": {
      "settings": {
        "pylsp.plugins.pylsp_django": {
          "enabled": true
        },
        "pylsp.plugins.jedi_completion": {
          "include_params": true
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {}
      }
    }
  }
}
